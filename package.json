{
  "name": "@sgtpooki/helia-verified-fetch-cli",
  "version": "1.0.0",
  "description": "A simple CLI for downloading IPFS content using @helia/verified-fetch",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/SgtPooki/helia-verified-fetch-cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SgtPooki/helia-verified-fetch-cli.git"
  },
  "bugs": {
    "url": "https://github.com/SgtPooki/helia-verified-fetch-cli/issues"
  },
  "type": "module",
  "main": "index.ts",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "breaking": true,
              "release": "major"
            },
            {
              "revert": true,
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "type": "deps",
              "release": "patch"
            },
            {
              "scope": "no-release",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "chore",
                "section": "Trivial Changes"
              },
              {
                "type": "docs",
                "section": "Documentation"
              },
              {
                "type": "deps",
                "section": "Dependencies"
              },
              {
                "type": "test",
                "section": "Tests"
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "scripts": {
    "clean": "aegir clean",
    "lint": "aegir lint",
    "dep-check": "aegir dep-check",
    "doc-check": "aegir doc-check",
    "build": "aegir build",
    "test": "aegir test",
    "test:chrome": "aegir test -t browser --cov",
    "test:chrome-webworker": "aegir test -t webworker",
    "test:firefox": "aegir test -t browser -- --browser firefox",
    "test:firefox-webworker": "aegir test -t webworker -- --browser firefox",
    "test:node": "aegir test -t node --cov",
    "test:electron-main": "aegir test -t electron-main",
    "release": "aegir release"
  },
  "bin": {
    "helia-verified-fetch-cli": "./dist/src/index.js"
  },
  "keywords": [
    "Helia",
    "IPFS",
    "@helia/verified-fetch",
    "fetch",
    "p2p",
    "libp2p",
    "javascript"
  ],
  "author": "Russell Dempsey <1173416+SgtPooki@users.noreply.github.com>",
  "license": "MIT",
  "devDependencies": {
    "aegir": "^42.2.5"
  },
  "dependencies": {
    "@helia/block-brokers": "^2.0.3",
    "@helia/verified-fetch": "^1.3.3",
    "blockstore-fs": "^1.1.10",
    "datastore-fs": "^9.1.8",
    "debug": "^4.3.4",
    "helia": "^4.1.0",
    "yargs": "^17.7.2"
  }
}
